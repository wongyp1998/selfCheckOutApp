<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="15dp"
    app:cardElevation="15dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">



        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <TextView
                android:id="@+id/tsc_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="1dp"
                android:textColor="@color/black">

            </TextView>
        </LinearLayout>



        <TextView
            android:id="@+id/tsc_id"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Transaction ID"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:id="@+id/tsc_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:layout_below="@id/tsc_id"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:id="@+id/tsc_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Time"
            android:layout_toRightOf="@id/tsc_date"
            android:layout_below="@id/tsc_id"
            android:layout_marginLeft="10dp">

        </TextView>


        <TextView
            android:id="@+id/tsc_total"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:text="Amount"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/arrow_img"
            >

        </TextView>

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_profile_arrow_right"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"

            >
        </ImageView>







    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>